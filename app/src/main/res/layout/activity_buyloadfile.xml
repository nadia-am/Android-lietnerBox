        <!--android:id="@+id/btn_buy"-->
        <!--android:background="@drawable/btn_custom"-->
        <!--android:layout_alignParentRight="false"-->
        <!--android:layout_margin="10dp" />-->

    </LinearLayout>

</LinearLayout>