<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#8f5db7"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:id="@+id/rel_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_menu"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/flBack"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical|center_horizontal"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_db"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_gravity="center" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/fl_setting"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/flBack">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_setting"
                android:layout_toRightOf="@+id/flBack"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_gravity="center" />
        </FrameLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@drawable/gradient_reg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linlayout">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/relInfoGrp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_groupInfo"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/header_rec_purp" />
    </RelativeLayout>
    <!--LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@drawable/gradient_reg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linlayout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </LinearLayout-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="#FAFAFA">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FAFAFA"
            android:gravity="center|right"
            android:layout_marginLeft="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date1"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date2"
                android:textStyle="bold"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FAFAFA"
            android:gravity="center|right"
            android:layout_marginRight="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_todayDate"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_addGroupDate"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/relInfoCard">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cardInfo"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/header_rec_purp"
            android:gravity="center" />
    </RelativeLayout>
    <!--LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@drawable/gradient_reg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linlayout3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </LinearLayout-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="#FAFAFA">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#FAFAFA"
            android:gravity="center|right"
            android:layout_marginLeft="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_numberOfCardNum"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reviewCardNum"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_memorizeCardNum"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FAFAFA"
            android:gravity="center|right"
            android:layout_marginRight="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_numberOfCard"
                android:layout_gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reviwCard"
                android:layout_gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_memorizeCard"
                android:layout_gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FAFAFA">

        <!--
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_reviewCards"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="@drawable/circle_shodow"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp" />

        -->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_fabrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            android:src="@drawable/fab_btnr"
            app:layout_anchorGravity="right"
            app:backgroundTint="#00B8D4"
            android:layout_alignParentRight="true"/>

       <!--
       <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_addCard"
            android:textColor="#FAFAFA"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_shodow"
            android:clickable="true"
            android:gravity="center"
            android:textSize="18dp" />
            -->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/fab_btn"
            app:layout_anchorGravity="center"
            app:backgroundTint="#00B8D4"
            android:layout_alignParentLeft="true" />



    </RelativeLayout>

</LinearLayout>