<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rec_listview"
        android:id="@+id/lin_mylist"
        android:gravity="center_vertical"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_nam"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="right|center_vertical"
                android:textSize="16sp"
                android:layout_gravity="right|center_vertical"
                android:layout_toLeftOf="@+id/icon"
                android:layout_toStartOf="@+id/icon"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_nam"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:id="@+id/rel_info">

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/allCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#b404cb"
                android:gravity="right|center_vertical"
                android:padding="1dp"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/allCardNum"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true" />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/allCardNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#b404cb"
                android:gravity="left|center_vertical"
                android:padding="1dp"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/reviewable"
                android:layout_centerVertical="true" />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reviewable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#b404cb"
                android:gravity="left|center_vertical"
                android:padding="1dp"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/reviewableNum"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true" />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reviewableNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#b404cb"
                android:gravity="left|center_vertical"
                android:padding="1dp"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>